<html>
    <head>
        <title>NDNation On-the-Record Predictions</title>
        <meta http-equiv="Pragma" content="no-cache" />
        <link type="text/css" rel="stylesheet" href="layout.css" />
    </head>
    <body>
        <h1>NDNation On-the-Record Hoops Prediction Contest</h1>
        <p><i>by <a href="mailto:{{misc.email}}">{{misc.maintainer}}</a></i></p>

        <h2>{{season.current}} Season</h2>
        <p><a href="scoring.html">Scoring &amp; Rules</a></p>

        {{#fullSeason.active}}
        <p><a href="fullseason.html">Full Season Leaderboard</a></p>
        {{/fullSeason.active}}
        {{^fullSeason.active}}
        <p class="disabled">Full Season Leaderboard (posted following third game)</p>
        {{/fullSeason.active}}

        {{#acc.active}}
        <p><a href="acc.html">ACC Leaderboard</a></p>
        {{/acc.active}}
        {{^acc.active}}
        <p class="disabled">ACC Leaderboard (posted following second ACC game)</p>
        {{/acc.active}}

        <h2>Individual Game Results</h2>
        <ul>
        {{#games}}
            {{#ndScore}}
            <li><a href="{{filename}}">Irish {{ndScore}}, {{opponent}} {{oppScore}}</a></li>
            {{/ndScore}}
            {{^ndScore}}
            <li>{{opponent}}</li>
            {{/ndScore}}
        {{/games}}
        </ul>

        <p><a href="../{{season.prevDir}}/index.html">{{season.previous}} Results</a></p>

    </body>
</html>
