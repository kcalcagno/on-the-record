<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
   
<html>
    <head>
        <title>Game {{gameId}} -- {{opponent}}</title>
        <link type="text/css" rel="stylesheet" href="layout.css" />
    </head>
    <body>
        <h1 class="game">Irish {{ndScore}}, {{opponent}} {{oppScore}}</h1>
        <table>
            <thead>
                <tr>
                    <th class="scores">&nbsp;</th>
                    <th class="name">Name</th>
                    <th class="total">Score</th>
                    <th class="scores">ND</th>
                    <th class="scores">{{shortName}}</th>
                    <th class="scores">Margin</th>
                    <th class="scores">Points</th>
                    <th class="scores">Pen.</th>
                    <th class="scores">Bonus</th>
                </tr>
            </thead>
            <tbody>
                {{#predictions}}
                <tr>
                    <td class="scores">{{#gameRank}}{{gameRank}}.{{/gameRank}}</td>
                    <td class="name">{{poster.posterName}}</td>
                    <td class="total">{{score}}</td>
                    <td class="scores">{{ndScore}}</td>
                    <td class="scores">{{oppScore}}</td>
                    <td class="scores">{{margin}}</td>
                    <td class="scores">{{points}}</td>
                    <td class="scores">{{penalty}}</td>
                    <td class="scores">{{bonus}}</td>
                </tr>
                {{/predictions}}
            </tbody>
        </table>
    </body>
</html>
